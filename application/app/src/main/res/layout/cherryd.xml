<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c1"
    tools:context=".cherryd">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <ImageView
            android:layout_width="425dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_weight="0.1">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="right"
        android:alpha="0.7"
        android:layout_marginTop="-60dp"
        android:background="@drawable/b"
        android:orientation="horizontal"
        android:layout_weight="0.04">

        <Button
            android:id="@+id/angry_btnn"
            android:layout_gravity="center"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:fontFamily="@font/merriweather_bold"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/bu"
            android:shadowColor="#00000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="CULTURE"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.9">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="15dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_bold"
            android:text="How to Plant Cherry Trees?"
            android:textColor="#ffffff"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </TextView>

    </LinearLayout>

    <com.skyhope.showmoretextview.ShowMoreTextView
        android:id="@+id/tee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:background="#8F000000"
        android:layout_marginBottom="35dp"
        android:text="\n✓   Trees on standard rootstock should be planted with the graft union a few inches below the soil level.\n\n✓   Trees on dwarf rootstock should be planted with the graft union several inches above the soil level, which will prevent the graft from growing its own roots and bypassing the rootstock.\n\n✓   When planting fan-trained trees, construct the necessary supports before planting. Plant fans only 12 to 15 feet apart.\n\n✓   For bareroot trees, place the rootstock on a small mound of soil in the center of the planting hole, and spread the roots down and away, trying not to bend the roots. Backfill with soil.\n\n✓   For container-grown trees, first remove the rootball and set the tree on its side; cut through any pot-bound or encircled roots with shears. Don’t cover the top of the root-ball."
        android:fontFamily="@font/merriweather_italic"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>
