<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityHome"
    android:background="@drawable/pla"
    android:screenOrientation="portrait"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="0.3">

        <ImageView
            android:layout_width="425dp"
            android:layout_height="188dp"
            android:layout_gravity="right">
        </ImageView>
    </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.1">

        <soup.neumorphism.NeumorphButton

            android:layout_gravity="center_horizontal"
            android:id="@+id/changeMyLanguage"
            style="@style/Widget.Neumorph.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweather_bold_talic"
            android:text="@string/changeLang"
            android:textColor="#FD79AC6F"
            android:textSize="12dp"
            app:neumorph_shadowColorLight="#00FFFFFF"
            app:neumorph_shapeType="flat" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:gravity="right">

        <soup.neumorphism.NeumorphButton
            android:id="@+id/log"
            style="@style/Widget.Neumorph.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/start"
            android:textColor="#000000"
            android:textSize="13dp"
            android:fontFamily="@font/merriweather_bold_talic"
            app:neumorph_backgroundColor="#00F3F3F3"
            app:neumorph_shadowColorDark="#FFFFFF"
            app:neumorph_shadowColorLight="#F3F3F3"
            app:neumorph_shadowElevation="6dp"
            app:neumorph_shapeType="basin" />
    </LinearLayout>

</LinearLayout>